<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <size
        android:width="@dimen/marker.size"
        android:height="@dimen/marker.size" />

    <gradient
        android:endColor="#66ff00"
        android:gradientRadius="100%"
        android:startColor="@android:color/transparent"
        android:type="radial" />

    <stroke
        android:width="1dp"
        android:color="#66ff00"
        android:dashGap="3dp"
        android:dashWidth="5dp" />

</shape>