<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/survive_card_image"
    style="@style/SurvivalCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:transitionName="@string/transition.card" >

    <RelativeLayout
        android:id="@+id/earthquake_item_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <TextView
            style="@style/CardText"
            android:id="@+id/earthquake_item_magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingStart="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:text="@string/app.name"
            android:transitionName="@string/transition.magnitude" />

        <TextView
            android:id="@+id/earthquake_item_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/earthquake_item_magnitude"
            android:layout_toLeftOf="@+id/earthquake_item_distance"
            android:layout_toStartOf="@id/earthquake_item_distance"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/padding"
            android:text="@string/app.name"
            android:transitionName="@string/transition.place" />

        <TextView
            style="@style/CardText"
            android:id="@+id/earthquake_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingEnd="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingStart="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:text="@string/app.name"
            android:transitionName="@string/transition.date" />

        <TextView
            android:id="@+id/earthquake_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/earthquake_item_magnitude"
            android:padding="@dimen/padding"
            android:text="@string/earthquake.distance"
            android:transitionName="@string/transition.distance" />

    </RelativeLayout>
</android.support.v7.widget.CardView>