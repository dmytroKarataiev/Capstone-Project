<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/earthquake_item_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/transition.card"
    style="@style/SurvivalCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/stat_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:paddingBottom="@dimen/padding" />

        <TextView
            android:id="@+id/stat_item_largest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@+id/stat_item_total"
            android:text="@string/earthquake.statistics.largest"/>

        <TextView
            android:id="@+id/stat_item_magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@+id/stat_item_largest" />

        <TextView
            android:id="@+id/stat_item_description"
            android:layout_below="@id/stat_item_magnitude"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stat_item_date"
            android:layout_below="@id/stat_item_largest"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>